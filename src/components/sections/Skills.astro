---
import { skills } from '../../data/skills.ts';
---
<section id="skills" class="skills">
    <div class="container">
        <h3>Skills</h3>

        <div class="grid">
            {skills.map(group => (
                <div class="card">
                    <h4>{group.category}</h4>

                    <ul>
                        {group.items.map(skill => (
                            <li class="badge">{skill}</li>
                        ))}
                    </ul>
                </div>)
            )}
        </div>
    </div>

    <style>
        .skills {
            padding: 6rem 1rem;
        }

        .container {
            max-width: 1100px;
            margin: 0 auto;
        }

        h3 {
            font-size: 2rem;
            margin-bottom: 3rem;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1.5rem;
        }

        .card {
            background-color: #020617;
            border: 1px solid var(--color-border);
            border-radius: 10px;
            padding: 1.5rem;
        }

        .card h4 {
            margin-bottom: 1rem;
            font-size: 1.1rem;
            color: var(--color-text);
        }

        ul {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .badge {
            padding: 0.4rem 0.7rem;
            font-size: 0.8rem;
            border-radius: 6px;
            background-color: #020617;
            border: 1px solid var(--color-border);
            color: var(--color-text-muted);
            white-space: nowrap;
        }
    </style>
</section>