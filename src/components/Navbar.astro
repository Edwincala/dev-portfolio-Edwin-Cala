---
import MobileMenu from "./react/MobileMenu"

const links =[
    {label: "Inicio", href: "#home"},
    {label: "Sobre m√≠", href: "#about"},
    {label: "Skills", href: "#skills"},
    {label: "Proyectos", href: "#projects"},
    {label: "Contacto", href: "#contact"}
]

---

<nav class="navbar">
    <div class="container">
        <a href="#home" class="logo">Edwin Cala</a>

        <!-- Desktop Menu -->
        <ul class="nav-links desktop">
            {links.map(link => (
                <li><a href={link.href}>{link.label}</a></li>
            ))}
        </ul>


        <!-- Mobile Menu -->
        <div class="mobile">
            <MobileMenu links={links} client:load />
        </div>

    </div>
</nav>

<style>
    .navbar {
        position: sticky;
        top: 0;
        background: var(--color-bg);
        border-bottom: 1px solid var(--color-border);
        z-index: 100;
    }

    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
    }

    .logo {
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        color: var(--color-text);
    }

    .nav-links {
        list-style: none;
        margin: 0;
        padding: 0;
        gap: 1.5rem;
    }

    .nav-links a {
        text-decoration: none;
        color: var(--color-text-muted);
        font-size: 0.95rem;
    }

    .nav-links a:hover {
        color: var(--color-primary);
    }

    /* desktop */
    .desktop {
        display: flex;
        flex-direction: row;
    }

    .mobile {
        display: none;
    }

    /* mobile */
    @media (max-width: 768px) {
        .desktop {
            display: none;
        }

        .mobile {
            display: block;
        }
        
    }
</style>